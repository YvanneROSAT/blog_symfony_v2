{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}

	<div class="row row-cols-1 row-cols-md-2 g-4 mb-5">
		{% for category in categories %}
			<div class="col">
				<div class="card shadow p-3 mb-5 bg-body-tertiary">
					<a href="{{ path('category.posts', {'slug': category.slug }) }}" class="text-decoration-none">
						<img src="/images/category/{{ category.label }}.png" class="card-img-top" alt="{{ category.label }}">
					</a>
					<div class="card-body">
						<h3 class="card-title text-center">
							<a href="{{ path('category.posts', {'slug': category.slug }) }}" class="text-decoration-none">
								{{ category.label }}
							</a>
						</h3>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
